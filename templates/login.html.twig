{% extends 'layout.html.twig' %}

{% block content %}
  <div class="login-form">

    {% if error %}
      <div class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('user_login') }}" method="post">
      <h2 class="text-center">Log in</h2>
      <div class="form-group">
        <input
            class="form-control"
            name="_username"
            placeholder="Username"
            required="required"
            type="email"
            value="{{ last_username }}">
      </div>
      <div class="form-group">
        <input
            class="form-control"
            name="_password"
            placeholder="Password"
            required="required"
            type="password">
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary btn-block">Log in</button>
      </div>
    </form>
    <p class="text-center"><a href="{{ path('user_register') }}">Create an Account</a></p>
  </div>
{% endblock %}
